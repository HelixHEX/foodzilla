// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String          @id @default(cuid())
  name              String
  email             String          @unique
  password          String
  groups            Group[]
  votes             Vote[]          @relation("user")
  voteSessions      Vote_Session[]
}

model Group {
  id                String          @id @default(cuid())
  name              String      
  creatorId         String 
  users             User[]
  active            Boolean         @default(true)
  voteSessions     Vote_Session[]   @relation("group")
}

model Vote_Session {
  id                String          @id @default(cuid())
  restaurants       String[]
  createdBy         String          
  group             Group           @relation(name: "group", fields: [groupId], references: [id])
  groupId           String
  votes             Vote[]          @relation("vote_session") 
  users             User[]
  ended             Boolean         @default(false)
  anonymous         Boolean         @default(false)
  winner            String?
}

model Vote {
  id                String          @id @default(cuid())
  resauarant_name   String        
  user              User            @relation(name: "user", fields: [userId], references: [id])
  userId            String
  VoteSession       Vote_Session    @relation("vote_session", fields: [VoteSessionId], references: [id])
  VoteSessionId     String
}