// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(cuid())
  name              String
  email             String      @unique
  password          String
  groups            Group[]
}

model Group {
  id                String      @id @default(cuid())
  name              String      
  creatorId         String 
  users             User[]
  active            Boolean     @default(true)
}